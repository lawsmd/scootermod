<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <!--
    ScooterTabbedSectionTemplate
    - Visual clone of Blizzard's SettingsAdvancedQualitySectionTemplate used in Graphics.
    - Provides a bordered nine-slice panel with two MinimalTabTemplate tabs and two content frames.
    - Consumers should set Title text and populate PageA/PageB with their controls.
  -->
  <EventFrame name="ScooterTabbedSectionTemplate" mixin="ScooterTabbedSectionMixin" virtual="true">
    <Layers>
      <Layer level="BACKGROUND">
        <FontString parentKey="TitleFS" inherits="GameFontHighlightLarge" text="">
          <Anchors>
            <Anchor point="TOPLEFT"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Frames>
      <Frame parentKey="NineSlice" inherits="NineSlicePanelTemplate">
        <KeyValues>
          <KeyValue key="layoutType" value="UniqueCornersLayout" type="string"/>
          <KeyValue key="layoutTextureKit" value="OptionsFrame" type="string"/>
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" x="-12" y="-14"/>
          <Anchor point="BOTTOMRIGHT" x="-6" y="-16"/>
        </Anchors>
      </Frame>

      <!-- Support up to nine tabs aligned from right to left: I, H, G, F, E, D, C, B, A -->
      <Button parentKey="TabI" inherits="MinimalTabTemplate">
        <Size y="37"/>
        <Anchors>
          <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="-30" y="10"/>
        </Anchors>
      </Button>
      <Button parentKey="TabH" inherits="MinimalTabTemplate">
        <Size y="37"/>
        <Anchors>
          <Anchor point="TOPRIGHT" relativeKey="$parent.TabI" relativePoint="TOPLEFT" x="0" y="0"/>
        </Anchors>
      </Button>
      <Button parentKey="TabG" inherits="MinimalTabTemplate">
        <Size y="37"/>
        <Anchors>
          <Anchor point="TOPRIGHT" relativeKey="$parent.TabH" relativePoint="TOPLEFT" x="0" y="0"/>
        </Anchors>
      </Button>
      <Button parentKey="TabF" inherits="MinimalTabTemplate">
        <Size y="37"/>
        <Anchors>
          <Anchor point="TOPRIGHT" relativeKey="$parent.TabG" relativePoint="TOPLEFT" x="0" y="0"/>
        </Anchors>
      </Button>
      <Button parentKey="TabE" inherits="MinimalTabTemplate">
        <Size y="37"/>
        <Anchors>
          <Anchor point="TOPRIGHT" relativeKey="$parent.TabF" relativePoint="TOPLEFT" x="0" y="0"/>
        </Anchors>
      </Button>
      <Button parentKey="TabD" inherits="MinimalTabTemplate">
        <Size y="37"/>
        <Anchors>
          <Anchor point="TOPRIGHT" relativeKey="$parent.TabE" relativePoint="TOPLEFT" x="0" y="0"/>
        </Anchors>
      </Button>
      <Button parentKey="TabC" inherits="MinimalTabTemplate">
        <Size y="37"/>
        <Anchors>
          <Anchor point="TOPRIGHT" relativeKey="$parent.TabD" relativePoint="TOPLEFT" x="0" y="0"/>
        </Anchors>
      </Button>
      <Button parentKey="TabB" inherits="MinimalTabTemplate">
        <Size y="37"/>
        <Anchors>
          <Anchor point="TOPRIGHT" relativeKey="$parent.TabC" relativePoint="TOPLEFT" x="0" y="0"/>
        </Anchors>
      </Button>
      <Button parentKey="TabA" inherits="MinimalTabTemplate">
        <Size y="37"/>
        <Anchors>
          <Anchor point="TOPRIGHT" relativeKey="$parent.TabB" relativePoint="TOPLEFT" x="0" y="0"/>
        </Anchors>
      </Button>

      <!-- Page frames will be anchored dynamically by LayoutTabs() to respect multi-row tab spacing -->
      <Frame parentKey="PageA"/>
      <Frame parentKey="PageB"/>
      <Frame parentKey="PageC"/>
      <Frame parentKey="PageD"/>
      <Frame parentKey="PageE"/>
      <Frame parentKey="PageF"/>
      <Frame parentKey="PageG"/>
      <Frame parentKey="PageH"/>
      <Frame parentKey="PageI"/>
    </Frames>
    <Scripts>
      <OnLoad method="OnLoad"/>
    </Scripts>
  </EventFrame>
  
  <!-- A thin wrapper around SettingsListElementTemplate to give us a unique
       frame pool per row type and avoid cross-template recycling artifacts. -->
  <Frame name="ScooterListElementTemplate" inherits="SettingsListElementTemplate" virtual="true"/>
  <!-- Separate pools for rows in Manage Profiles to avoid cross-section reuse -->
  <Frame name="ScooterActiveListElementTemplate" inherits="SettingsListElementTemplate" virtual="true"/>
  <Frame name="ScooterSpecEnableListElementTemplate" inherits="SettingsListElementTemplate" virtual="true"/>
  <Frame name="ScooterSpecRowListElementTemplate" inherits="SettingsListElementTemplate" virtual="true"/>
  <!-- Separate pool for the Presets page hero row to prevent bleed-through when switching categories -->
  <Frame name="ScooterPresetsHeroTemplate" inherits="SettingsListElementTemplate" virtual="true"/>
  <Frame name="ScooterPresetsEmptyTemplate" inherits="SettingsListElementTemplate" virtual="true"/>
</Ui>
