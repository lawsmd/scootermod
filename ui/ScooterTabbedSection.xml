<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <!--
    ScooterTabbedSectionTemplate
    - Visual clone of Blizzard's SettingsAdvancedQualitySectionTemplate used in Graphics.
    - Provides a bordered nine-slice panel with two MinimalTabTemplate tabs and two content frames.
    - Consumers should set Title text and populate PageA/PageB with their controls.
  -->
  <EventFrame name="ScooterTabbedSectionTemplate" mixin="ScooterTabbedSectionMixin" virtual="true">
    <Layers>
      <Layer level="BACKGROUND">
        <FontString parentKey="TitleFS" inherits="GameFontHighlightLarge" text="">
          <Anchors>
            <Anchor point="TOPLEFT"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Frames>
      <Frame parentKey="NineSlice" inherits="NineSlicePanelTemplate">
        <KeyValues>
          <KeyValue key="layoutType" value="UniqueCornersLayout" type="string"/>
          <KeyValue key="layoutTextureKit" value="OptionsFrame" type="string"/>
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" x="-12" y="-14"/>
          <Anchor point="BOTTOMRIGHT" x="-6" y="-16"/>
        </Anchors>
      </Frame>

      <Button parentKey="TabB" inherits="MinimalTabTemplate">
        <Size y="37"/>
        <Anchors>
          <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="-30" y="10"/>
        </Anchors>
      </Button>
      <Button parentKey="TabA" inherits="MinimalTabTemplate">
        <Size y="37"/>
        <Anchors>
          <Anchor point="TOPRIGHT" relativeKey="$parent.TabB" relativePoint="TOPLEFT" x="0" y="0"/>
        </Anchors>
      </Button>

      <Frame parentKey="PageA" setAllPoints="true"/>
      <Frame parentKey="PageB" setAllPoints="true"/>
    </Frames>
    <Scripts>
      <OnLoad method="OnLoad"/>
    </Scripts>
  </EventFrame>
  
  <!-- A thin wrapper around SettingsListElementTemplate to give us a unique
       frame pool per row type and avoid cross-template recycling artifacts. -->
  <Frame name="ScooterListElementTemplate" inherits="SettingsListElementTemplate" virtual="true"/>
  <!-- Separate pools for rows in Manage Profiles to avoid cross-section reuse -->
  <Frame name="ScooterActiveListElementTemplate" inherits="SettingsListElementTemplate" virtual="true"/>
  <Frame name="ScooterSpecEnableListElementTemplate" inherits="SettingsListElementTemplate" virtual="true"/>
  <Frame name="ScooterSpecRowListElementTemplate" inherits="SettingsListElementTemplate" virtual="true"/>
</Ui>
